# Apollo 30k Agent Deployment - Environment Variables

# Redis (for BullMQ job queues)
REDIS_URL=redis://localhost:6379
# Production: Use Upstash or Railway Redis
# REDIS_URL=rediss://default:password@redis.railway.internal:6379

# PostgreSQL (for Railway operator)
DATABASE_URL=postgresql://user:pass@localhost:5432/apollo
# Production: Use Railway PostgreSQL
# DATABASE_URL=postgresql://postgres:pass@postgres.railway.internal:5432/railway

# Cloudflare
CLOUDFLARE_ACCOUNT_ID=848cf0b18d51e0170e0d1537aec3505a
CLOUDFLARE_API_TOKEN=your-api-token-here

# Railway
RAILWAY_API_TOKEN=your-railway-token-here
RAILWAY_PROJECT_ID=your-project-id-here

# DigitalOcean
DO_API_TOKEN=your-do-token-here
DO_DROPLET_ID=your-droplet-id-here
DO_DROPLET_IP=159.65.43.12

# Raspberry Pi
PI_SSH_KEY=~/.ssh/id_ed25519
PI_IPS=192.168.4.49,192.168.4.64,192.168.4.99

# Agent Configuration
MIN_AGENTS=1000
MAX_AGENTS=30000
SCALE_UP_THRESHOLD=10000
SCALE_DOWN_THRESHOLD=1000
HEARTBEAT_THRESHOLD_MINUTES=5
MAX_RESTART_ATTEMPTS=3

# Monitoring
HEALTHCHECK_INTERVAL_SECONDS=30
DASHBOARD_URL=https://agents.blackroad.io

# Logging
LOG_LEVEL=info
NODE_ENV=production

# =============================================================================
# ADDITIONAL INTEGRATIONS (Kanban/CRM System)
# =============================================================================

# Vercel
VERCEL_TOKEN=your-vercel-token-here
VERCEL_TEAM_ID=your-team-id-here

# Salesforce (CRM State Management)
SALESFORCE_INSTANCE_URL=https://yourinstance.salesforce.com
SALESFORCE_CLIENT_ID=your-client-id-here
SALESFORCE_CLIENT_SECRET=your-client-secret-here
SALESFORCE_ACCESS_TOKEN=your-access-token-here
SALESFORCE_REFRESH_TOKEN=your-refresh-token-here

# Claude API (Anthropic)
ANTHROPIC_API_KEY=your-anthropic-key-here

# GitHub
GITHUB_TOKEN=your-github-token-here
GITHUB_REPOSITORY_OWNER=BlackRoad-OS
GITHUB_REPOSITORY_NAME=apollo-30k-deployment

# Cloudflare KV Namespaces (State Sync)
CLOUDFLARE_KV_STATE_ID=your-state-kv-namespace-id
CLOUDFLARE_KV_KANBAN_ID=your-kanban-kv-namespace-id

# Raspberry Pi Network
PI_HOSTS=pi@192.168.4.49,pi@192.168.4.64,pi@192.168.4.99
PI_SSH_USER=pi

# Mobile/Terminal Tools (reference only - no secrets needed)
# Termius, iSH, Shellfish, Working Copy, Pyto
# These sync via SSH keys and iCloud - configure in apps directly

# SHA Infinity Hashing (optional custom config)
SHA_INFINITY_ALGORITHMS=sha256,sha384,sha512
SHA_INFINITY_ITERATIONS=1
SHA_INFINITY_SALTED=true
